<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/LayoutCSS")
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/modernizr", "~/bundles/LayoutJS")
</head>
<body>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
