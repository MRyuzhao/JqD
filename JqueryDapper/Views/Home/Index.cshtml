                        <h2 class="entry-title"><a href="javascript:void(0)">@item.Title</a></h2>
                        <span class="cat-links"><a href="javascript:void(0)">@item.Category</a></span>
                    </div>
                    <div class="post-thumbnail-wrap">
                        @if (item.ImagePathStatus)
                        {
                            <img src=@item.ImagePath alt="" style="height: 570px; width: 940px">
                        }
                    </div>
                    <div class="entry-content">
                        @*<p>@item.Content</p>*@
                        <a class="moreDetail" data-operateid="@item.Id" href="javascript:void(0)">More Details</a>
                    </div>
                </div>
            </article>
