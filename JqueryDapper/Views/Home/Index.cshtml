<!-- 模态框（Modal）-->
<div class="modal fade overflow_y" id="moreDetailModal" tabindex="-1" role="dialog"
     aria-labelledby="newModalLabel" aria-hidden="true">
    <form id="form">
        <div class="modal-dialog auto_width1200">
            <div class="modal-content auto_height550">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">
                        博客明细
                    </h4>
                </div>
                <div class="modal-body auto_widthPercert100 auto_heightPercert75">
                    <div class="form-group auto_heightPercert15">
                        <label class="col-md-1">标题&nbsp;:</label>
                        <div class="col-md-7">
                            <input type="text" class="form-control" disabled name="Title">
                        </div>
                        <label class="col-md-1">类别&nbsp;:</label>
                        <div class="col-md-3">
                            <select class="form-control" id="category" disabled name="Category"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1">内容&nbsp;:</label>
                        <div class="col-md-11">
                            <div id="content"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-success" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </form>
</div>

